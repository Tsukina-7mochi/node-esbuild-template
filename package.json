{
  "name": "node-esbuild-template",
  "version": "0.1.0",
  "description": "Template for web project with esbuild on Node.js",
  "scripts": {
    "lint": "npx eslint .",
    "fmt": "npx prettier --write .",
    "fmt-check": "npx prettier --check .",
    "build": "npx ts-node build.ts",
    "dev": "npx ts-node build.ts --dev",
    "watch": "npx ts-node build.ts --dev --watch",
    "clean": "rm -rf dist/"
  },
  "author": "Tsukina-7mochi",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "esbuild": "0.18.15",
    "esbuild-sass-plugin": "2.10.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "glob": "10.3.3",
    "prettier": "3.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  }
}
